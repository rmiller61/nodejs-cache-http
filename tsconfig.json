{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "rootDirs": ["application"],
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "lib": ["es2018", "dom"],
    "importHelpers": true,
    "composite": true
  },
  "references": [{ "path": "api" }],
  "exclude": ["node_modules", "dist", "api"],
  "include": ["**/*.ts", "**/*.tsx"]
}
